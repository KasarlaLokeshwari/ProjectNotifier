{
    "manifest_version": 3,
    "name": "CodeChef Verdict Notifier",
    "description": "Notifies the user when a CodeChef submission verdict is available.",
    "version": "1.0",
    "permissions": [
      "webRequest",
      "webRequestBlocking",
      "activeTab",
      "notifications",
      "storage"
    ],
    "background": {
      "service_worker": "background.js"
    },
    "content_scripts": [
      {
        "matches": ["*://www.codechef.com/submit/*"],
        "js": ["content.js"]
      }
    ],
    "icons": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  }
  